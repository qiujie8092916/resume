<script>
	$(document).ready(function(){
		var li = '';
		var tdnum = Math.ceil(629/21);
		var trnum = Math.ceil(419/21);
		var num = tdnum * trnum;
		for(var i=0;i<num;i++){
			li += '<li class='+i+'></li>';
		}
		$('.bd').append(li);
		var l = $('.bd li');
		for(var j=0;j<l.length;j++){
			if(j % 30 == 0){
				$('.bd li').eq(j-1).css('border-right','0');
			}
		}
		//alert(l.length);
	})
</script>
